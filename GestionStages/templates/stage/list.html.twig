{% extends 'base.html.twig' %}

{% block body %}
    <table class="table text-center">
        <tr>
            <td>{{ 'history'|trans }} :
                {% for stageHistory in historyStages %}
                <a href="{{ path('stage.show', {slug: stageHistory.slug}) }}">
                        {{ stageHistory.poste }},
                </a>
                {% endfor%}
                <hr>
            </td>
        </tr>
    </table>
    <table class="table text-center">
        <tr>
            <th class="active text-center">{{ 'post'|trans }}</th>
            <th class="active text-center">{{ 'company'|trans }}</th>
            <th class="active text-center">{{ 'category'|trans}}</th>
            <th class="active text-center">{{ 'town'|trans }}</th>
            <th class="active text-center">{{ 'edition'|trans }}</th>
            <th class="active text-center">{{ 'deletion'|trans }}</th>
        </tr>

        {% for stage in stages %}
            <tr>
                <td><a href="{{ path('stage.show', {slug: stage.slug}) }}">{{ stage.poste }}</a></td>
                <td>
                    <a href="#">
                        {{ stage.societe }}
                    </a>
                </td>
                <td>{{ stage.categorie.nom }}</td>
                <td>{{ stage.ville }}</td>
                <td>
                    <a href="{{ path('stage.edit', {slug: stage.slug}) }}">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            {{ 'edit'|trans }}
                        </button>
                    </a>
                </td>
                <td>
                    <a href="{{ path('stage.delete', {slug: stage.slug}) }}">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes vous sûr ??')">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            {{ 'delete'|trans }}
                        </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}